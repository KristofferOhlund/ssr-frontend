{
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.4.0",
    "htmlhint": "^1.6.3",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "scripts": {
    "htmlhint": "npx htmlhint --ignore='**/jsdoc/**' ./$npm_config_what -f compact || exit 0",
    "stylelint": "npx stylelint '**/*{.css,.vue}' --fix --formatter verbose || exit 0",
    "eslint": "npx eslint '**/*{.js,.ts,.vue}' --fix || exit 0",
    "lint": "npx stylelint '**/*{.css,.vue}' --formatter verbose --fix --ignore-path .gitignore && npx htmlhint --ignore='**/jsdoc/**' ./$npm_config_what -f compact || exit 0"
  }
}
